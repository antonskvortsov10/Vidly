@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Тип подписки: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Дата рождения: @Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>
